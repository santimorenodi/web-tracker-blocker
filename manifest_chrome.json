{
    "manifest_version": 3,
    "name": "MiSantiTrackerBlocker (Chrome)",
    "version": "1.0",
    "description": "Controla tu dopamina en Chrome Desktop.",
    "permissions": [
        "storage",
        "tabs",
        "idle",
        "alarms"
    ],
    "host_permissions": [
        "*://*.x.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {},
    "web_accessible_resources": [
        {
            "resources": [
                "blocked.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}