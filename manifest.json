{
    "manifest_version": 2,
    "name": "MiSantiTrackerBlocker",
    "version": "1.1.2",
    "description": "Controla tu tiempo en redes sociales y evita la sobrecarga de dopamina.",
    "permissions": [
        "storage",
        "tabs",
        "idle",
        "webNavigation",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "128": "icon.png"
    },
    "web_accessible_resources": [
        "blocked.html"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "limitador-dopamina@santi.local",
            "data_collection_permissions": {
                "required": [
                    "none"
                ],
                "optional": []
            }
        }
    }
}